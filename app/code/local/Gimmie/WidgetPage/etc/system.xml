<config>
  <tabs>
    <gimmie>
      <label>Gimmie Rewards</label>
      <sort_order>1</sort_order>
    </gimmie>
  </tabs> 

  <sections>
    <Gimmie translate="label">
      <label>Gimmie Rewards</label>
      <tab>gimmie</tab>
      <frontend_type>text</frontend_type>
      <sort_order>1000</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>   

      <groups>
        <general translate="label">
          <label>General Gimmie Settings</label>
          <frontend_type>text</frontend_type>
          <sort_order>1</sort_order>
          
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>  
          
          <fields>
            <gimmie_enable>
              <label>Enable Gimmie</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>                    
            </gimmie_enable>

            <consumer_key>
              <label>Consumer Key</label>
              <frontend_type>text</frontend_type>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>                    
            </consumer_key>

            <secret_key>
              <label>Secret Key</label>
              <frontend_type>text</frontend_type>
              <sort_order>3</sort_order>
              <show_in_default>2</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>                    
            </secret_key>

            <country>
              <label>Country</label>
              <frontend_type>select</frontend_type>
              <source_model>Gimmie_WidgetPage/Observer</source_model>
              <sort_order>4</sort_order>
              <show_in_default>2</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>  
            </country>
            
            <locale>
              <label>Locale</label>
              <frontend_type>text</frontend_type>
              <sort_order>5</sort_order>
              <show_in_default>2</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>  
            </locale>
            
          </fields>
          
        </general>
        
        <points translate="label">
        
          <label>Points and Event Triggers</label>
          
          <frontend_type>text</frontend_type>
          <sort_order>2</sort_order>
          
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>  
          
          <fields>
            <purchase_exchange_dollar>
              <label>Amount [X]</label>
              <comment>
                <![CDATA[Indicate amount to spend for points conversion]]>
              </comment>
              <frontend_type>text</frontend_type>
              <sort_order>12</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>                
            </purchase_exchange_dollar>


            <purchase_exchange_points>
              <label>Points [Y]</label>
              <comment>
                <![CDATA[Indicate point to award for amount spend]]>
              </comment>              
              <frontend_type>text</frontend_type>
              <sort_order>13</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>                            
            </purchase_exchange_points>


            <gimmie_trigger_did_magento_user_spent_the_most>
              <label>Trigger event on monthly top spender</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>18</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>                    
            </gimmie_trigger_did_magento_user_spent_the_most>


            <gimmie_trigger_did_magento_user_referral_other_user>
              <label>Trigger event when referral</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>19</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>                    
            </gimmie_trigger_did_magento_user_referral_other_user>


            <gimmie_trigger_did_magento_user_purchased_item>
              <label>Trigger event when purchase </label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>20</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>                    
            </gimmie_trigger_did_magento_user_purchased_item>

            <gimmie_trigger_did_magento_user_born_this_month>
              <label>Trigger event when purchase during birthday month</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>21</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>                    
            </gimmie_trigger_did_magento_user_born_this_month>
          </fields>
        
        </points>
      
      </groups>                 
      
    </Gimmie>
  </sections>     
</config>
