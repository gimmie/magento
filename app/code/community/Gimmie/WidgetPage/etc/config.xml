"badges_title"              : "Badges",
"mayorships_title"          : "Mayorships",
"redemptions_title"         : "Redemptions",
"activities_title"          : "Activities",
"badge"                     : "Badge",
"mystery_badge"             : "Mystery Badge",
"expires"                   : "Expires",
"redeemed"                  : "Redeemed",
"expired"                   : "Expired",
