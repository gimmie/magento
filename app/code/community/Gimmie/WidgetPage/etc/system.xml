<config>
  <tabs>
    <gimmie>
      <label>Gimmie Rewards</label>
      <sort_order>5</sort_order>
    </gimmie>
  </tabs> 

  <sections>
    <Gimmie translate="label">
      <label>Gimmie Rewards</label>
      <tab>gimmie</tab>
      <frontend_type>text</frontend_type>
      <sort_order>1</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>   

      <groups>
        <general translate="label">
          <label>General Gimmie Settings</label>
          <frontend_type>text</frontend_type>
          <sort_order>1</sort_order>
          
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>  
          
          <fields>
            <gimmie_enable>
              <label>Enable Gimmie</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>                    
            </gimmie_enable>

            <consumer_key>
              <label>Consumer Key</label>
              <frontend_type>text</frontend_type>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>                    
            </consumer_key>

            <secret_key>
              <label>Secret Key</label>
              <comment>
                <![CDATA[<a href="http://www.gimmieworld.com/sign-up" target="_blank">Signup here to get your own key and secret.</a>]]>
              </comment>
              <frontend_type>text</frontend_type>
              <sort_order>3</sort_order>
              <show_in_default>2</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>                    
            </secret_key>

            <country>
              <label>Country</label>
              <frontend_type>select</frontend_type>
              <source_model>Gimmie_WidgetPage/Source_Countries</source_model>
              <sort_order>4</sort_order>
              <show_in_default>2</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>  
            </country>
            
            <locale>
              <label>Locale</label>
              <frontend_type>text</frontend_type>
              <sort_order>5</sort_order>
              <show_in_default>2</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>  
            </locale>
            
          </fields>
          
        </general>
        
        <views translate="label">
          <label>Gimmie Popup Views</label>
          <frontend_type>text</frontend_type>
          <sort_order>2</sort_order>
          
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          
          <fields>
            <catalog_view>
              <label>Catalog View</label>
              <frontend_type>select</frontend_type>
              <sort_order>1</sort_order>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </catalog_view>
            <profile_view>
              <label>Profile View</label>
              <frontend_type>select</frontend_type>
              <sort_order>2</sort_order>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </profile_view>
            <leaderboard_view>
              <label>Leaderboard View</label>
              <frontend_type>select</frontend_type>
              <sort_order>3</sort_order>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </leaderboard_view>
            
            <notification_timeout>
              <label>Notification Timeout</label>
              <frontend_type>text</frontend_type>
              <comment>
                <![CDATA[This value is how long notification shows up when user has done something.]]>
              </comment>
              <sort_order>4</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </notification_timeout>
          </fields>
        </views>
        
        <points translate="label">
        
          <label>Points and Event Triggers</label>
          
          <frontend_type>text</frontend_type>
          <sort_order>3</sort_order>
          
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>  
          
          <fields>
            <gimmie_trigger_did_magento_user_spent_the_most>
              <label>Top spender event</label>
              <comment>
                <![CDATA[Every month, give out rewards(points/instant reward) to top spender]]>
              </comment>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>18</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>                    
            </gimmie_trigger_did_magento_user_spent_the_most>


            <gimmie_trigger_did_magento_user_referral_other_user>
              <label>Referral event</label>
              <comment>
                <![CDATA[Give out rewards when user invites friends]]>
              </comment>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>19</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>                    
            </gimmie_trigger_did_magento_user_referral_other_user>


            <gimmie_trigger_did_magento_user_purchased_item>
              <label>Purchases event</label>
              <comment>
                <![CDATA[Give out rewards when user purchases item]]>
              </comment>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>20</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>                    
            </gimmie_trigger_did_magento_user_purchased_item>

            <gimmie_trigger_did_magento_user_born_this_month>
              <label>Birthday month event</label>
              <comment>
                <![CDATA[Give out rewards when user purchases in their birthday month]]>
              </comment>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>21</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>                    
            </gimmie_trigger_did_magento_user_born_this_month>
          </fields>
        
        </points>
        
        <text_and_styles translate="label">
          <label>Widget Text and Style</label>
          
          <frontend_type>text</frontend_type>
          <sort_order>4</sort_order>
          
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>  
          
          <fields>
            <widget_text>
              <label>Widget Text</label>
              <comment>
                <![CDATA[Change text after `:` only]]>
              </comment>
              <frontend_type>textarea</frontend_type>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </widget_text>
            
            <widget_help>
              <label>Widget Help Information</label>
              <frontend_type>textarea</frontend_type>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>                
            </widget_help>
            
            <widget_help_url>
              <label>Widget Help URL</label>
              <frontend_type>text</frontend_type>
              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>                
            </widget_help_url>
            
            <widget_style>
              <label>Widget Stylesheets</label>
              <frontend_type>textarea</frontend_type>
              <sort_order>4</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>                
            </widget_style>
          </fields>
        </text_and_styles>
      
      </groups>                 
      
    </Gimmie>
  </sections>     
</config>
